# 購物車
DROP TABLE IF EXISTS shopping_car;

CREATE TABLE IF NOT EXISTS shopping_car(
    user_id        INT            NOT NULL,
    seq_no         INT            NOT NULL,
    pokemon_id     INT            NOT NULL,
    pokemon_name   VARCHAR(255)   NOT NULL,
    pokemon_image_url      VARCHAR(255)   NOT NULL,
    order_id       INT            NOT NULL,
    price          INT            NOT NULL,
    stock          INT            NOT NULL,
    buy_cnt        INT            NOT NULL,
    amount         INT            NOT NULL
);

INSERT INTO shopping_car(user_id, seq_no, pokemon_id, pokemon_name, pokemon_image_url, order_id, price, stock, buy_cnt, amount) VALUES (1, 1, 4, '小火龍', '/images/0004-小火龍.png', 1, 150, 3, 1, 100);
INSERT INTO shopping_car(user_id, seq_no, pokemon_id, pokemon_name, pokemon_image_url, order_id, price, stock, buy_cnt, amount) VALUES (1, 2, 25, '皮卡丘', '/images/0025-皮卡丘.png', 1, 150, 1, 1, 150);
INSERT INTO shopping_car(user_id, seq_no, pokemon_id, pokemon_name, pokemon_image_url, order_id, price, stock, buy_cnt, amount) VALUES (1, 3, 155, '火球鼠', '/images/0155-火球鼠.png', 1, 150, 3, 1, 100);

SELECT user_id, SUM(amount) FROM shopping_car WHERE user_id = 1;

SELECT seq_no, user_id, pokemon_id, buy_cnt, amount, SUM(amount) FROM shopping_car WHERE user_id = :userId;

UPDATE shopping_car SET buy_cnt = shopping_car.buy_cnt+1 WHERE user_id = 1 AND pokemon_id = 4;

UPDATE shopping_car SET buy_cnt = :buy_cnt+1 WHERE user_id = :userId AND pokemon_id = :pokemonId;

SELECT user_id, seq_no, pokemon_id, buy_cnt, amount FROM shopping_car WHERE user_id = :userId AND pokemon_id = :pokemonId;

DELETE FROM shopping_car WHERE user_id = 1;

UPDATE shopping_car SET amount = :buyCnt * :price WHERE user_id = :userId AND pokemon_id = :pokemonId;

UPDATE shopping_car SET buy_cnt = :buyCnt WHERE user_id = :userId AND pokemon_id = :pokemonId;


# 訂單
DROP TABLE IF EXISTS `order`;

CREATE TABLE IF NOT EXISTS `order`
(
    order_id           INT       NOT NULL PRIMARY KEY AUTO_INCREMENT,
    user_id            INT       NOT NULL,
    total_amount       INT       NOT NULL,
    created_date       TIMESTAMP NOT NULL,
    last_modified_date TIMESTAMP NOT NULL
);

INSERT INTO `order`(user_id, total_amount, created_date, last_modified_date) VALUES (:userId, :totalAmount, '2022-04-20 17:00:00', '2022-04-25 18:00:00');

INSERT INTO shopping_car(user_id, seq_no, pokemon_id, order_id, buy_cnt, amount) VALUES (1, 1, 4, 1, 1, 100);

SELECT order_id, user_id, total_amount, created_date, last_modified_date FROM `order` WHERE user_id = :userId;


# 背包
DROP TABLE IF EXISTS bag;

CREATE TABLE IF NOT EXISTS bag
(
  bag_id                INT            NOT NULL,
  user_id               INT            NOT NULL,
  my_pk_id              INT            NOT NULL,
  created_date          TIMESTAMP      NOT NULL,
  last_modified_date    TIMESTAMP      NOT NULL
);


# 盒子
DROP TABLE IF EXISTS box;

CREATE TABLE IF NOT EXISTS box
(
    box_id                INT            NOT NULL   PRIMARY KEY,
    user_id               INT            NOT NULL,
    my_pk_id              INT            NOT NULL,
    created_date          TIMESTAMP      NOT NULL,
    last_modified_date    TIMESTAMP      NOT NULL
);

# 我的寶可夢
DROP TABLE IF EXISTS my_pokemon_value;

CREATE TABLE IF NOT EXISTS my_pokemon_value
(
    my_pk_id              INT            NOT NULL PRIMARY KEY AUTO_INCREMENT,
    user_id               INT            NOT NULL,
    pokemon_id            INT            NOT NULL,
    pokemon_name          VARCHAR(255)   NOT NULL,
    pokemon_image_url     VARCHAR(255)   NOT NULL,
    category              VARCHAR(32)    NOT NULL,
    hp                    INT            NOT NULL,
    lv                    INT            NOT NULL,
    exp                   INT            NOT NULL,
    attack                INT            NOT NULL,
    defense               INT            NOT NULL,
    speed                 INT            NOT NULL,
    price                 INT            NOT NULL,
    `description`         VARCHAR(1024),
    created_date          TIMESTAMP      NOT NULL,
    last_modified_date    TIMESTAMP      NOT NULL
);

# 我的寶可夢 擁有的 技能
DROP TABLE IF EXISTS my_pokemon_skill;

CREATE TABLE IF NOT EXISTS my_pokemon_skill
(
    my_pk_id              INT            NOT NULL PRIMARY KEY AUTO_INCREMENT,
    user_id               INT            NOT NULL,
    pokemon_id            INT            NOT NULL,
    pokemon_name          VARCHAR(255)   NOT NULL,
    skill_id              INT            NOT NULL,
    skill_name            VARCHAR(255)   NOT NULL,
    skill_description     VARCHAR(1024),
    created_date          TIMESTAMP      NOT NULL,
    last_modified_date    TIMESTAMP      NOT NULL
);

SELECT bag.bag_id, bag.my_pk_id, mpv.user_id, mpv.pokemon_name, mpv.category, mpv.hp, mpv.lv, mpv.pokemon_image_url, mpv.attack, mpv.defense, mpv.speed, mpv.description, mpv.created_date, mpv.last_modified_date FROM bag join my_pokemon_value mpv ON bag.my_pk_id = mpv.my_pk_id where mpv.user_id = 1 GROUP BY mpv.my_pk_id;

SELECT bag.bag_id, bag.my_pk_id, mpv.user_id, mpv.pokemon_name, mpv.category, mpv.hp, mpv.lv, mpv.pokemon_image_url, mpv.attack, mpv.defense, mpv.speed, mpv.description, mpv.created_date, mpv.last_modified_date FROM bag WHERE user_id = :userId ORDER BY bag.bag_id DESC;

