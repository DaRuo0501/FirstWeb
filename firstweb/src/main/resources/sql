# 查詢 單一寶可夢的 技能
SELECT ps.user_id, p.pokemon_id, p.pokemon_name, s.skill_id, s.skill_name, s.skill_attack, s.skill_category, s.skill_category_url, s.skill_description FROM pokemon p join pokemon_skill ps on p.pokemon_id = ps.pokemon_id join skill s on ps.skill_id = s.skill_id join category c on c.category_name = p.category WHERE p.pokemon_id = 1;

SELECT b.bag_id, b.user_id, b.pokemon_id, b.pokemon_name, s.skill_id, s.skill_name, s.skill_category, s.skill_category_url, s.skill_attack, s.skill_description FROM bag b join pokemon_skill ps on b.pokemon_id = ps.pokemon_id join skill s on ps.skill_id = s.skill_id WHERE b.user_id = 1 AND b.pokemon_id = 25;

